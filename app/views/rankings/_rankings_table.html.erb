<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th width="10%" class="text-center">Rank</th>
    <th width="60%">Player</th>
    <th width="10%" class="<%= 'hidden ' if summary %>hidden-xs text-center">Last<br/>12 Mths</th>
    <th width="10%" class="<%= 'hidden ' if summary %>hidden-xs text-center">Prev<br/>12 Mths</th>
    <th width="10%" class="text-center">Points</th>
  </tr>
  </thead>

  <tbody>
  <% rank = 1 %>
  <% last_points = 0 %>
  <% @player_list.each do |player, points| %>
      <tr>
        <td class="text-center"><%= rank if last_points != points[:total] %></td>
        <td><%= link_to player.name, player %></td>
        <td class="<%= 'hidden ' if summary %>hidden-xs text-right"><%= points[:last_year].sort.reverse.first(4).sum %></td>
        <td class="<%= 'hidden ' if summary %>hidden-xs text-right"><%= points[:previous_year].sort.reverse.first(4).sum %></td>
        <td class="text-right"><%= points[:total] %></td>
      </tr>
      <% rank += 1 %>
      <% last_points = points[:total] %>
  <% end %>
  </tbody>
</table>