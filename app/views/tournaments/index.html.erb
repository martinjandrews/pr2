<h1>Tournaments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <% if current_user %>
      <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @tournaments.sort_by{|each| each.name}.each do |tournament| %>
      <tr>
        <td><%= link_to tournament.name, tournament %></td>
        <td><%= tournament.description %></td>
        <% if current_user %>
            <td><%= link_to 'Edit', edit_tournament_path(tournament) %></td>
            <td><%= link_to 'Destroy', tournament, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user %>
<%= link_to 'New Tournament', new_tournament_path, :class => "btn btn-default" %>
<% end %>
