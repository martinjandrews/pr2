<div class="row">
  <div class="col-md-4">
    <h1>Tournaments</h1>
    <table class="table table-striped table-bordered">
      <thead>
      <tr>
        <th>Name</th>
        <% if current_user %>
            <th colspan="2"></th>
        <% end %>
      </tr>
      </thead>

      <tbody>
      <% @tournaments.sort_by { |each| each.name }.each do |tournament| %>
          <tr>
            <td><%= link_to tournament.name, tournament %></td>
            <% if current_user %>
                <td><%= link_to 'Edit', edit_tournament_path(tournament) %></td>
                <td><%= link_to 'Destroy', tournament, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-md-8">
    <h1>Latest Events</h1>
    <table class="table table-striped table-bordered">
      <thead>
      <tr>
        <th>Event</th>
        <th class="text-right">Winner</th>
        <th></th>
        <th>Runner Up</th>
      </tr>
      </thead>

      <tbody>
      <% @last_year_editions.each do |edition| %>
          <tr>
            <td><%= link_to edition.name, edition %></td>
            <td class="text-right"><%= link_to edition.winner.name, edition.winner %></td>
            <td class="text-center">def</td>
            <td><%= link_to edition.runner_up.name, edition.runner_up %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<% if current_user %>
    <%= link_to 'New Tournament', new_tournament_path, :class => "btn btn-default" %>
<% end %>
