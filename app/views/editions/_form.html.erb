<%= simple_form_for(@edition) do |form| %>
    <%= form.input :year %>
    <%= form.input :start_date %>
    <%= form.input :end_date %>
    <%= form.input :multiplier %>
    <%= form.association :tournament %>

    <%= form.simple_fields_for :placing do |placing_form| %>
        <%= placing_form.input :position %>
        <%= placing_form.input :player %>
    <% end %>

    <%= form.button :submit %>
<% end %>

