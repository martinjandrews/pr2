<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th width="10%" class="text-center">Position</th>
    <th>Player</th>
    <% if current_user %>
        <th colspan="2"></th>
    <% end %>
  </tr>
  </thead>

  <tbody>
  <% @edition.placings.sort_by{|each| each.position}.each do |placing| %>
      <tr>
        <td class="text-center"><%= placing.position %></td>
        <td><%= link_to placing.player.name, placing.player %></td>
        <% if current_user %>
            <td><%= link_to 'Edit', edit_placing_path(placing) %></td>
            <td><%= link_to 'Destroy', placing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>
